<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="20" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            <children>
                <Label text="ðŸ›’ Cart" textFill="#004cff">
                    <font>
                        <Font size="48.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#btnViewStorePressed" prefHeight="40" prefWidth="140" style="-fx-background-color: #004cff; -fx-text-fill: white; -fx-font-size: 14px;" text="View Store" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="30" right="30" top="10" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Filter:" />
                <TextField fx:id="filterField" prefWidth="200" promptText="Enter keyword..." />
                <RadioButton selected="true" text="By ID">
                    <toggleGroup>
                        <ToggleGroup fx:id="filterCategory" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton text="By Title">
                    <toggleGroup>
                        <fx:reference source="filterCategory" />
                    </toggleGroup>
                </RadioButton>
            </HBox>

            <TableView fx:id="tblMedia" prefHeight="400" prefWidth="960">
                <columns>
                    <TableColumn fx:id="colMediaId" prefWidth="100" text="ID" />
                    <TableColumn fx:id="colMediaTitle" prefWidth="300" text="Title" />
                    <TableColumn fx:id="colMediaCategory" prefWidth="250" text="Category" />
                    <TableColumn fx:id="colMediaCost" prefWidth="310" text="Cost" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Button fx:id="btnPlay" onAction="#btnPlayPressed" prefWidth="100" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="â–¶ Play" />
                <Button fx:id="btnRemove" onAction="#btnRemovePressed" prefWidth="100" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="ðŸ—‘ Remove" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Total:" textFill="#000000">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>
                <Label fx:id="costLabel" text="0 $" textFill="#000000">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>
            </HBox>
            <Button fx:id="btnPlaceOrder" onAction="#btnPlaceOrderPressed" prefHeight="50" prefWidth="200" style="-fx-background-color: #004cff; -fx-text-fill: white;" text="âœ… Place Order">
                <font>
                    <Font size="18" />
                </font>
            </Button>
        </VBox>
    </bottom>
</BorderPane>
