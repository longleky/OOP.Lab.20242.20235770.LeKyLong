<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="220.0" prefWidth="360.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-border-color: #cccccc; -fx-border-radius: 10; -fx-border-width: 2;
                   -fx-background-color: #fdfdfd; -fx-background-radius: 10;">
   <children>
      <VBox alignment="CENTER" spacing="12.0"
            layoutX="20.0" layoutY="20.0"
            prefWidth="320.0" prefHeight="180.0">
         <children>
            <Label fx:id="lblTitle"
                   text="Title"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"
                   prefWidth="300.0"
                   alignment="CENTER" />
            <Label fx:id="lblCost"
                   text="Cost"
                   style="-fx-font-size: 16px;"
                   prefWidth="300.0"
                   alignment="CENTER" />
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnAddToCart"
                          text="Add to Cart"
                          onAction="#btnAddToCartClicked"
                          prefWidth="120.0" />
                  <Button fx:id="btnPlay"
                          text="Play"
                          onAction="#btnPlayClicked"
                          prefWidth="80.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="10" bottom="10" left="10" right="10" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
